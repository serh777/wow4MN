# Variables de entorno de ejemplo
# Copia este archivo como .env.local y completa con valores reales
# IMPORTANTE: NUNCA subas archivos .env con valores reales a GitHub

# Supabase (CRÍTICO para autenticación)
NEXT_PUBLIC_SUPABASE_URL="https://tu-proyecto.supabase.co"
NEXT_PUBLIC_SUPABASE_ANON_KEY="tu-clave-anon-de-supabase"
SUPABASE_SERVICE_ROLE_KEY="tu-service-role-key-de-supabase"

# NextAuth (REQUERIDO para autenticación)
# Genera con: openssl rand -base64 32
NEXTAUTH_SECRET="tu-clave-secreta-generada"
NEXTAUTH_URL="http://localhost:3000"

# Base de datos
DATABASE_URL="postgresql://username:password@localhost:5432/wowseoweb3?schema=public"

# API Keys
NEXT_PUBLIC_ANTHROPIC_API_KEY="tu-clave-anthropic"

# Web3Modal Configuration
NEXT_PUBLIC_WALLET_CONNECT_PROJECT_ID="tu-wallet-connect-project-id"
NEXT_PUBLIC_WALLET_CONNECT_CLIENT_KEY="tu-wallet-connect-client-key"
NEXT_PUBLIC_WALLET_CONNECT_SERVER_KEY="tu-wallet-connect-server-key"

# Blockchain RPC
ETHEREUM_RPC_URL="https://mainnet.infura.io/v3/tu-api-key"
GOERLI_RPC_URL="https://eth-goerli.g.alchemy.com/v2/tu-api-key"

# Google Analytics
NEXT_PUBLIC_GA_ID="G-XXXXXXXXXX"
NEXT_PUBLIC_GOOGLE_SEARCH_CONSOLE_ID="tu-google-search-console-id"

# Chatwoot Live Chat
NEXT_PUBLIC_CHATWOOT_TOKEN="tu-chatwoot-website-token"

# Email Service (Resend)
RESEND_API_KEY="tu-resend-api-key"
RESEND_FROM_EMAIL="Tu App <noreply@tu-dominio.com>"

# Site Configuration
NEXT_PUBLIC_SITE_URL="https://tu-dominio.com"
NEXT_PUBLIC_SITE_NAME="Tu App Name"
NEXT_PUBLIC_SITE_DESCRIPTION="Descripción de tu aplicación"

# Additional API Keys
NEXT_PUBLIC_DEEPSEEK_API_KEY="tu-deepseek-api-key"
NEXT_PUBLIC_REOWN_API_KEY="tu-reown-api-key"
NEXT_PUBLIC_DUNE_API_KEY="tu-dune-api-key"
NEXT_PUBLIC_ETHERSCAN_API_KEY="tu-etherscan-api-key"
NEXT_PUBLIC_ALCHEMY_API_KEY="tu-alchemy-api-key"

# Configuración del Indexer
START_BLOCK="0"
BATCH_SIZE="100"
CONCURRENCY="1"
RETRY_ATTEMPTS="3"
RETRY_DELAY="1000"

# Node.js version para Netlify
NODE_VERSION="18.18.0"

# Deshabilitar escaneo de secretos
SECRETS_SCAN_ENABLED="false"